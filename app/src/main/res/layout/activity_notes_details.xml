<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.NotesDetailsActivity">

    <TextView
        android:id="@+id/heading_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notes_details"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="5dp">

    </TextView>

    <TextView
        android:id="@+id/content_details_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_above="@id/created_date_layout"
        android:padding="5dp"
        android:layout_below="@id/heading_title_text_view"
        android:textSize="15sp">

    </TextView>


    <LinearLayout
        android:id="@+id/created_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:padding="5dp">

        <TextView
            android:id="@+id/created_date_heading_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/created_on"
            android:textSize="12sp">

        </TextView>

        <TextView
            android:id="@+id/created_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp">

        </TextView>
    </LinearLayout>


</RelativeLayout>